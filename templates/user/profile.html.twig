{% extends 'base.html.twig' %}

{% block title %}Profil | {{ parent() }}{% endblock %}

{% block body %}
<div id="sortiesFilterss" class="card">
    <fieldset >
    <h3 class="text-center">{{ users.username }}</h3>
    </fieldset>
</div>
        <div class="row">
            <div class="mt-4 text-right col-6">
                <div class="card-body">
                    {{ form_start(profileForm) }}
                    {{ form_widget(profileForm) }}
                    <br>
                    <button class="btn btn-primary" type="submit">Sauvegarder</button>

                    <p class="card-text">{{ form_end(profileForm) }}</p>
                </div>
            </div>
            <div class="col-6 text-center">
                <br>
                <img src="{{ asset('uploads/profilePictures/'~app.user.photo ) | imagine_filter('my_thumb') }}"
                     alt="photo de profil">
            </div>
        </div>
{% endblock %}

